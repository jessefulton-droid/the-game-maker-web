# Production Environment Variables
# Copy this file to .env in production (or set via Render dashboard)

# REQUIRED: Your Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your_very_long_random_secret_key_here_at_least_32_characters

# Session Configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True

# CORS Configuration (update with your domain)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=INFO

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB max upload size
SESSION_COOKIE_SECURE=True   # Require HTTPS for cookies
SESSION_COOKIE_HTTPONLY=True # Prevent JavaScript access to cookies
SESSION_COOKIE_SAMESITE=Lax  # CSRF protection

# Rate Limiting (if implemented)
# RATELIMIT_STORAGE_URL=redis://localhost:6379

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Note: On Render, set these via the dashboard Environment tab
# The render.yaml file will auto-configure most of these

